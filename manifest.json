{
    "description": "Cancels downloads",
    "manifest_version": 2,
    "name": "Cancel Downloads",
    "version": "1.0",
    "developer": {
        "name": "cjlangan",
        "url": "https://github.com/cjlangan/webextension-cancel-downloads"
    },
    "permissions": [
        "downloads"
    ],
    "browser_action": {
        "default_title": "Cancel All Downloads",
        "default_icon": "icons/green-power-button.svg"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
